{
  "login": {
    "className": "LoginPage",
    "elements": {
      "usernameField": {
        "selector": "#user-name",
        "type": "element"
      },
      "passwordField": {
        "selector": "#password",
        "type": "password"
      },
      "loginButton": {
        "selector": "#login-button",
        "type": "button"
      },
      "errorMessage": {
        "selector": "[data-test=\"error\"]",
        "type": "element"
      },
      "logo": {
        "selector": ".login_logo",
        "type": "element"
      }
    },
    "methods": {
      "verifyUsernameField": {
        "action": "verify",
        "selector": "#user-name",
        "description": "Verify usernameField is visible"
      },
      "fillPasswordField": {
        "action": "fill",
        "selector": "#password",
        "description": "Fill passwordField field"
      },
      "clickLoginButton": {
        "action": "click",
        "selector": "#login-button",
        "description": "Click loginButton"
      },
      "verifyErrorMessage": {
        "action": "verify",
        "selector": "[data-test=\"error\"]",
        "description": "Verify errorMessage is visible"
      },
      "verifyLogo": {
        "action": "verify",
        "selector": ".login_logo",
        "description": "Verify logo is visible"
      }
    }
  },
  "dashboard": {
    "className": "DashboardPage",
    "elements": {
      "menuButton": {
        "selector": "#react-burger-menu-btn",
        "type": "button"
      },
      "productGrid": {
        "selector": ".inventory_list",
        "type": "element"
      },
      "cartIcon": {
        "selector": ".shopping_cart_link",
        "type": "link"
      },
      "sortDropdown": {
        "selector": ".product_sort_container",
        "type": "element"
      },
      "logoutLink": {
        "selector": "#logout_sidebar_link",
        "type": "link"
      }
    },
    "methods": {
      "clickMenuButton": {
        "action": "click",
        "selector": "#react-burger-menu-btn",
        "description": "Click menuButton"
      },
      "verifyProductGrid": {
        "action": "verify",
        "selector": ".inventory_list",
        "description": "Verify productGrid is visible"
      },
      "clickCartIcon": {
        "action": "click",
        "selector": ".shopping_cart_link",
        "description": "Click cartIcon"
      },
      "verifySortDropdown": {
        "action": "verify",
        "selector": ".product_sort_container",
        "description": "Verify sortDropdown is visible"
      },
      "clickLogoutLink": {
        "action": "click",
        "selector": "#logout_sidebar_link",
        "description": "Click logoutLink"
      }
    }
  }
}